f = 400

start = 0
n = 1600
fs = 500 * f
step = 1 / fs
stop = step * n

t = np.arange(start, stop, step)

x = lambda t : np.sin(2 * np.pi * f * t)

plt.xlabel('t [s]')
plt.ylabel('Amplitudine')
plt.title('x(t)')
plt.grid(True)
plt.plot(t, x(t))





